<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间通常用于映射Dao层-->
<mapper namespace="main.java.com.xxx.mapper.UserMapper">

	<select id="queryUserByName" parameterType="String" resultMap="main.java.com.xxx.entity.User">
		select * from tb_user where userName= #{userName}
	</select>
</mapper>